<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/margin_borders"
    android:layout_marginLeft="@dimen/margin_borders"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cur_weather_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/city_text_size"/>
            <TextView
                android:id="@+id/cur_weather_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/country_text_size"/>

            <TextView
                android:id="@+id/cur_weather_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/cur_weather_date_size"
                android:textStyle="italic"
                android:textColor="@color/cur_weather_last_update" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/add_to_important_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_borders"
            android:layout_gravity="right"
            android:background="@color/cur_weather_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cur_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cur_temp_size"
                android:textColor="@color/cur_weather_temp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cur_weather_wind"
                android:textSize="@dimen/cur_addinfo_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cur_weather_humidity"
                android:textSize="@dimen/cur_addinfo_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cur_weather_pressure"
                android:textSize="@dimen/cur_addinfo_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cur_weather_cloudy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
     </LinearLayout>

    <ListView
        android:id="@+id/forecast_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>
