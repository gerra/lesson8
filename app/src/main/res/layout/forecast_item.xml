<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/forecast_day"
        android:layout_width="0in"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/forecast_item_date"
        android:text="23.12"
        android:textSize="@dimen/forecast_text_size"/>

    <ImageView
        android:id="@+id/forecast_cloudy"
        android:layout_width="0in"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/hot"/>
    <TextView
        android:id="@+id/forecast_temp_low"
        android:layout_width="0in"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/forecast_item_temp_low"
        android:text="-23°"
        android:textSize="@dimen/forecast_text_size" />
    <TextView
        android:id="@+id/forecast_temp_high"
        android:layout_width="0in"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/forecast_item_temp_high"
        android:text="23°"
        android:textSize="@dimen/forecast_text_size" />

</LinearLayout>