<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cities_list_background" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frame_edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ru.ifmo.md.lesson8.CitiesLoaderClasses.DelayAutoCompleteTextView
                android:id="@+id/input_city"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
                android:textColor="@color/edit_city_text"/>

            <ProgressBar
                android:id="@+id/city_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:textColor="@color/divider"
        android:textStyle="bold"/>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/thick_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider"/>

    <ListView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>